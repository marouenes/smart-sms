[*.json]
    indent_style = space
    indent_size = 2

[{Makefile,**.mk}]
    indent_style = tab
    indent_size = 2

[{*.yml,**.yaml}]
    indent_style = space
    indent_size = 2

[{*.md}]
    trim_trailing_whitespace = false
    insert_final_newline = false
    indent_size = 2

[{*.sh}]
    indent_style = space
    indent_size = 2

[{*.html}]
    indent_style = space
    indent_size = 2

[{*.css}]
    indent_style = space
    indent_size = 2

[{*.sql}]
    indent_style = space
    indent_size = 4
